
@{
    ViewData["Title"] = "Upload Course";
}

<h2 class="text-center">Upload Course</h2>

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadCourse">
    <div class="row">
        <div class="col">
            <p class="text-center"><a href="~/assets/SampleCourse.xml">Sample XML document</a></p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label class="text-center">Paste Course XML</label>
                <textarea class="form-control" name="xmlTextInput" rows="6"></textarea>
            </div>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col justify-content-md-center">
            <p class="text-center">Or</p>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col justify-content-md-center">
            <div class="form-group">
                <input type="file" class="form-control-file" id="files" name="files" aria-describedby="fileHelp">
                <small id="fileHelp" class="form-text text-muted">Please select an XML containing a course</small>
            </div>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col justify-content-md-center">
            <div class="form-group">
                <input type="submit" class="btn btn-secondary btn-lg text-center" value="Create Course" />
            </div>
        </div>        
    </div>

  
</form>



